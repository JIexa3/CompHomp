<Window x:Class="CompHomp.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование пользователя" 
        Height="450" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">
    <Window.Resources>
        <Style x:Key="AdminActionButton" TargetType="Button">
            <Setter Property="Background" Value="#FF363636"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF404040"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF505050"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Редактирование пользователя" 
                   Foreground="White" 
                   FontSize="24" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" >
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Логин:" Width="150" Foreground="White" VerticalAlignment="Center"/>
                <TextBox x:Name="UsernameTextBox" Width="300" Background="#FF2D2D2D" Foreground="White"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Email:" Width="150" Foreground="White" VerticalAlignment="Center"/>
                <TextBox x:Name="EmailTextBox" Width="300" Background="#FF2D2D2D" Foreground="White"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Роль:" Width="150" Foreground="White" VerticalAlignment="Center"/>
                <ComboBox x:Name="RoleComboBox" Width="300" Background="#FF2D2D2D" Foreground="Black">
                    <ComboBoxItem Content="Пользователь" Tag="Customer"/>
                    <ComboBoxItem Content="Администратор" Tag="Admin"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Статус:" Width="150" Foreground="White" VerticalAlignment="Center"/>
                <ComboBox x:Name="StatusComboBox" Width="300" Background="#FF2D2D2D" Foreground="Black">
                    <ComboBoxItem>Активный</ComboBoxItem>
                    <ComboBoxItem>Заблокирован</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="SaveButton" Content="Сохранить" Style="{StaticResource AdminActionButton}" Margin="0,0,10,0"/>
            <Button x:Name="CancelButton" Content="Отмена" Style="{StaticResource AdminActionButton}"/>
        </StackPanel>
    </Grid>
</Window>
