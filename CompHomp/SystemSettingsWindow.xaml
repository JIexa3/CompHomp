<Window x:Class="CompHomp.SystemSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки системы" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">
    <Window.Resources>
        <Style x:Key="AdminActionButton" TargetType="Button">
            <Setter Property="Background" Value="#FF363636"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF404040"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF505050"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Настройки системы" 
                   Foreground="White" 
                   FontSize="24" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" >
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Максимальное количество попыток входа:" 
                           Width="300" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
                <TextBox x:Name="MaxLoginAttemptsTextBox" 
                         Width="200" 
                         Background="#FF2D2D2D" 
                         Foreground="White" 
                         PreviewTextInput="NumberValidationTextBox"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Период блокировки (минуты):" 
                           Width="300" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
                <TextBox x:Name="LockoutDurationTextBox" 
                         Width="200" 
                         Background="#FF2D2D2D" 
                         Foreground="White" 
                         PreviewTextInput="NumberValidationTextBox"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Минимальная длина пароля:" 
                           Width="300" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
                <TextBox x:Name="MinPasswordLengthTextBox" 
                         Width="200" 
                         Background="#FF2D2D2D" 
                         Foreground="White" 
                         PreviewTextInput="NumberValidationTextBox"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Требовать сложный пароль:" 
                           Width="300" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
                <CheckBox x:Name="ComplexPasswordCheckBox" 
                          VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Период хранения журнала аудита (дней):" 
                           Width="300" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
                <TextBox x:Name="AuditLogRetentionTextBox" 
                         Width="200" 
                         Background="#FF2D2D2D" 
                         Foreground="White" 
                         PreviewTextInput="NumberValidationTextBox"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="SaveButton" Content="Сохранить" Style="{StaticResource AdminActionButton}" Margin="0,0,10,0" Width="120" Height="40"/>
            <Button x:Name="CancelButton" Content="Отмена" Style="{StaticResource AdminActionButton}" Width="120" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
