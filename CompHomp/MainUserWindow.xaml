<Window x:Class="CompHomp.MainUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompHomp"
        xmlns:converters="clr-namespace:CompHomp.Converters"
        mc:Ignorable="d"
        Title="Панель пользователя" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Window.Resources>
        <converters:TotalPriceConverter x:Key="PriceConverter"/>
        <converters:BoolToLikeStateConverter x:Key="BoolToLikeStateConverter"/>
        <converters:BoolToDislikeStateConverter x:Key="BoolToDislikeStateConverter"/>
        <converters:BuildStatusConverter x:Key="StatusConverter"/>
        <DropShadowEffect x:Key="ShadowEffect"
                         Direction="270"
                         ShadowDepth="3"
                         BlurRadius="5"
                         Opacity="0.3"
                         Color="Black"/>
                         
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3F3F3F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#FF404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF505050"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RatingButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="MinWidth" Value="75"/>
            <Setter Property="MinHeight" Value="75"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsLiked}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF0066CC"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsDisliked}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFCC0000"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF3D3D3D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LikeButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="MinWidth" Value="75"/>
            <Setter Property="MinHeight" Value="75"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsLiked}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF0066CC"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF3D3D3D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DislikeButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="MinWidth" Value="75"/>
            <Setter Property="MinHeight" Value="75"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsDisliked}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFCC0000"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF3D3D3D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CommentButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="MinWidth" Value="75"/>
            <Setter Property="MinHeight" Value="75"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF3D3D3D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ExitButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3F3F3F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#FF2D2D2D">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Панель пользователя" 
                      Foreground="White" 
                      FontSize="24" 
                      HorizontalAlignment="Center"
                      Grid.Column="0"
                      Margin="0,20,0,20"/>
                      
            <Button x:Name="CartButton"
                    Grid.Column="1"
                    Width="40" Height="40"
                    Margin="10"
                    Background="#FF363636"
                    BorderThickness="0">
                <Path Data="{StaticResource CartIcon}"
                      Fill="White"
                      Stretch="Uniform"
                      Margin="8"/>
            </Button>

            <Button x:Name="ProfileButton"
                    Grid.Column="2"
                    Width="40" Height="40"
                    Margin="10"
                    Background="#FF363636"
                    BorderThickness="0">
                <Path Data="{StaticResource ProfileIcon}"
                      Fill="White"
                      Stretch="Uniform"
                      Margin="8"/>
            </Button>

            <Button x:Name="ExitButton"
                    Grid.Column="3"
                    Width="40" Height="40"
                    Margin="10"
                    Background="#FF363636"
                    BorderThickness="0">
                <Path Data="{StaticResource ExitIcon}"
                      Fill="White"
                      Stretch="Uniform"
                      Margin="8"/>
            </Button>
        </Grid>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель -->
            <DockPanel Grid.Column="0" 
                      Background="#FF2D2D2D"
                      LastChildFill="True"
                      Margin="0,0,1,0">
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Text="CompHomp"
                             FontSize="28"
                             FontWeight="Bold"
                             Foreground="White"
                             HorizontalAlignment="Center"
                             Margin="0,20,0,15"/>
                    <Image Source="D:\Диплом\CompHomp\CompHomp\CompHomp\res\computer.png"
                           Height="209"
                           Width="201"
                           Stretch="Uniform"
                           Margin="20,0,20,40"/>
                </StackPanel>

                <!-- Кнопки навигации -->
                <StackPanel Height="455">
                    <Button Content="Собрать сборку"
                            Style="{DynamicResource MenuButton}"
                            Click="CreateBuild_Click"/>
                    <Button Content="Мои сборки"
                            Style="{DynamicResource MenuButton}"
                            Click="MyBuilds_Click"/>
                    <Button Content="Все сборки"
                            Style="{DynamicResource MenuButton}"
                            Click="AllBuilds_Click"/>
                   
                </StackPanel>
            </DockPanel>

            <!-- Список сборок -->
            <Border Grid.Column="1" 
                    Background="#FF2D2D2D"
                    Margin="10">
                <ScrollViewer x:Name="MainScrollViewer"
                             Style="{DynamicResource MainScrollViewer}"
                             HorizontalScrollBarVisibility="Auto"
                             VerticalScrollBarVisibility="Auto">
                    <WrapPanel x:Name="BuildsPanel" 
                              Orientation="Horizontal"
                              Width="{Binding ActualWidth, ElementName=MainScrollViewer}">
                        <ItemsControl x:Name="BuildsListView"
                                    Background="Transparent"
                                    BorderThickness="0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF2D2D2D"
                                            BorderBrush="#FF404040"
                                            BorderThickness="2"
                                            CornerRadius="10"
                                            Width="300"
                                            Margin="10"
                                            Effect="{StaticResource ShadowEffect}">
                                        <Border BorderBrush="#FF505050"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Margin="1">
                                            <Grid Margin="10">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="200"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Изображение сборки -->
                                                <Image Grid.Row="0" 
                                                       Source="{Binding ImagePath}"
                                                       Stretch="UniformToFill"
                                                       RenderOptions.BitmapScalingMode="HighQuality"
                                                       Margin="10"/>

                                                <!-- Информация о сборке -->
                                                <StackPanel Grid.Row="1" 
                                                          Margin="15,0,15,10">
                                                    <TextBlock Text="{Binding Name}"
                                                             Foreground="#FFE0E0E0"
                                                             FontSize="18"
                                                             FontWeight="SemiBold"
                                                             TextWrapping="Wrap"
                                                             Margin="0,0,0,5"/>
                                                    <TextBlock Foreground="#FFB0B0B0"
                                                             Margin="0,0,0,5">
                                                        <Run Text="Автор: "/>
                                                        <Run Text="{Binding AuthorName}"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Description}"
                                                             Foreground="#FFB0B0B0"
                                                             TextWrapping="Wrap"
                                                             MaxHeight="60"
                                                             Margin="0,0,0,5"/>
                                                    <TextBlock Foreground="#FFE0E0E0">
                                                        <Run Text="Цена: "/>
                                                        <Run Text="{Binding TotalPrice, Converter={StaticResource PriceConverter}}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- Рейтинги и действия -->
                                                <StackPanel>
                                                    <!-- Счетчики (лайки/дизлайки/комментарии) -->
                                                    <StackPanel Orientation="Horizontal" 
                                                              Margin="0,0,0,5">
                                                        <Button Style="{StaticResource LikeButton}"
                                                                Click="LikeButton_Click"
                                                                Tag="{Binding}"
                                                                Width="60"
                                                                Height="60"
                                                                Margin="0,0,10,0">
                                                            <StackPanel>
                                                                <TextBlock Text="👍" 
                                                                         FontSize="20"
                                                                         HorizontalAlignment="Center"/>
                                                                <TextBlock Text="{Binding LikesCount, UpdateSourceTrigger=PropertyChanged}" 
                                                                         FontSize="16"
                                                                         HorizontalAlignment="Center"/>
                                                            </StackPanel>
                                                        </Button>
                                                        
                                                        <Button Style="{StaticResource DislikeButton}"
                                                                Click="DislikeButton_Click"
                                                                Tag="{Binding}"
                                                                Width="60"
                                                                Height="60"
                                                                Margin="0,0,10,0">
                                                            <StackPanel>
                                                                <TextBlock Text="👎" 
                                                                         FontSize="20"
                                                                         HorizontalAlignment="Center"/>
                                                                <TextBlock Text="{Binding DislikesCount, UpdateSourceTrigger=PropertyChanged}" 
                                                                         FontSize="16"
                                                                         HorizontalAlignment="Center"/>
                                                            </StackPanel>
                                                        </Button>

                                                        <Button Style="{StaticResource CommentButton}"
                                                                Click="WriteCommentButton_Click"
                                                                Tag="{Binding}"
                                                                Width="60"
                                                                Height="60">
                                                            <StackPanel>
                                                                <TextBlock Text="💬" 
                                                                         FontSize="20"
                                                                         HorizontalAlignment="Center"/>
                                                                <TextBlock Text="{Binding Comments.Count, UpdateSourceTrigger=PropertyChanged}" 
                                                                         FontSize="16"
                                                                         HorizontalAlignment="Center"/>
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>

                                                    <!-- Кнопки действий -->
                                                    <Grid Margin="0,10,0,0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Button Style="{StaticResource ActionButton}"
                                                                    Click="ViewDetails_Click"
                                                                    Tag="{Binding}">
                                                                <TextBlock Text="Подробнее" 
                                                                         FontSize="12"/>
                                                            </Button>
                                                            <Button Style="{StaticResource ActionButton}"
                                                                    Click="ViewComments_Click"
                                                                    Tag="{Binding}">
                                                                <TextBlock Text="Комментарии" 
                                                                         FontSize="12"/>
                                                            </Button>
                                                            <Button Style="{StaticResource ActionButton}"
                                                                    Click="AddToCart_Click"
                                                                    Tag="{Binding}"
                                                                    Margin="0">
                                                                <TextBlock Text="Купить" 
                                                                         FontSize="12"/>
                                                            </Button>
                                                        </StackPanel>
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
