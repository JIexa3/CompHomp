<Window x:Class="CompHomp.MainAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель администратора" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Window.Resources>
        <Style x:Key="AdminTileButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3E3E3E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#FF2D2D2D" 
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Панель администратора" 
                          Foreground="White" 
                          FontSize="24" 
                          HorizontalAlignment="Center"
                          Grid.Column="0"
                          Margin="0,20,0,20"/>
                          
                <Button x:Name="ExitButton"
                        Style="{StaticResource ExitButton}"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        ToolTip="Выйти"/>
            </Grid>
        </Border>

        <!-- Основная сетка управления -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Управление пользователями -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Управление пользователями" 
                           Foreground="White" 
                           FontSize="18" 
                           Margin="0,0,0,15"/>
                <Button Content="Список пользователей" 
                        Style="{StaticResource AdminTileButton}"
                        x:Name="UsersListButton"/>
                <Button Content="Добавить пользователя" 
                        Style="{StaticResource AdminTileButton}"
                        x:Name="AddUserButton"/>
                <Button Content="Блокировка пользователей" 
                        Style="{StaticResource AdminTileButton}"
                        x:Name="BlockUsersButton"/>
            </StackPanel>

            <!-- Управление сборками -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Управление сборками" 
                           Foreground="White" 
                           FontSize="18" 
                           Margin="0,0,0,15"/>
                <Button Content="Список сборок" 
                        Style="{StaticResource AdminTileButton}"
                        x:Name="BuildsListButton"/>
                <Button Content="Создать сборку" 
                        Style="{StaticResource AdminTileButton}"
                        x:Name="CreateBuildButton"/>
                <Button Content="Модерация сборок" 
                        Style="{StaticResource AdminTileButton}"
                        x:Name="ModerateBuildButton"/>
            </StackPanel>

            <!-- Дополнительное управление -->
            <StackPanel Grid.Column="2" Margin="10">
                <TextBlock Text="Дополнительно" 
                           Foreground="White" 
                           FontSize="18" 
                           Margin="0,0,0,15"/>
                <Button Content="Статистика продаж" 
                        Style="{StaticResource AdminTileButton}"
                        x:Name="SalesStatisticsButton"/>
                <!--<Button Content="Журнал аудита" 
                        Style="{StaticResource AdminTileButton}"
                        x:Name="AuditLogButton"/>-->
                <Button Content="Настройки системы" 
                        Style="{StaticResource AdminTileButton}"
                        x:Name="SystemSettingsButton"/>
                <Button Content="Журнал приложения" 
                        Style="{StaticResource AdminTileButton}"
                        x:Name="LogsButton" />
                <Button Content="Управление компонентами" 
                        Style="{StaticResource AdminTileButton}"
                        x:Name="ComponentManagementButton"/>
                <Button Content="Генерация отчетов" 
                        Style="{StaticResource AdminTileButton}"
                        x:Name="ReportGeneratorButton"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
