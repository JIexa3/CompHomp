<Window x:Class="CompHomp.BuildCommentsViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Комментарии" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#FF1A1A1A">
    <Border Margin="20" 
            Background="#FF2D2D2D" 
            CornerRadius="15" 
            BorderBrush="#FF404040" 
            BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Комментарии к сборке"
                       Foreground="#FFE0E0E0"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="0,0,0,15"/>

            <ScrollViewer Grid.Row="1"
                         Style="{DynamicResource CustomScrollViewer}">
                <ItemsControl x:Name="CommentsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FF383838"
                                    BorderBrush="#FF404040"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Margin="0,0,0,10"
                                    Padding="15">
                                <StackPanel>
                                    <DockPanel>
                                        <TextBlock Text="{Binding AuthorName}"
                                                   Foreground="#FFE0E0E0"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding CreatedDate, StringFormat=dd.MM.yyyy HH:mm}"
                                                   Foreground="#FFB0B0B0"
                                                   HorizontalAlignment="Right"/>
                                    </DockPanel>
                                    <TextBlock Text="{Binding Content}"
                                               Foreground="#FFE0E0E0"
                                               TextWrapping="Wrap"
                                               Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
