<Window x:Class="CompHomp.CreateBuildWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:CompHomp.Converters"
        Title="Создание сборки" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#FF1E1E1E">
    <Window.Resources>
        <converters:PowerProgressConverter x:Key="PowerProgressConverter"/>
        <Style x:Key="AdminTileButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3E3E3E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AdminTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style x:Key="AdminComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <Style x:Key="ImageSelectButton" TargetType="Button">
            <Setter Property="Background" Value="#FF4A4A4A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2C6.48,2 2,6.48 2,12C2,17.52 6.48,22 12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2M13,7V11H11V7H13M13,15V13H11V15H13Z" 
                                      Fill="White" 
                                      Width="20" 
                                      Height="20" 
                                      Stretch="Uniform" 
                                      Margin="0,0,10,0"/>
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5A5A5A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ImagePreviewBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="#FF3A3A3A"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#FF2D2D2D"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#FF2D2D2D" 
                Padding="20">
            <TextBlock Text="Создание новой сборки" 
                       Foreground="White" 
                       FontSize="24" 
                       HorizontalAlignment="Center"/>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="10">
                    <TextBlock Text="Основная информация" 
                               Foreground="White" 
                               FontSize="18" 
                               Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Название сборки:" 
                                   Grid.Column="0"
                                   Foreground="White" 
                                   Margin="10,0,10,5"
                                   VerticalAlignment="Center"/>
                        
                        <TextBox x:Name="BuildNameTextBox" 
                                 Grid.Column="1"
                                 Style="{StaticResource AdminTextBox}"/>
                        
                        <Button x:Name="SelectImageButton" 
                                Grid.Column="2"
                                Content="Выбрать изображение" 
                                Style="{StaticResource ImageSelectButton}"
                                Click="SelectImage_Click"/>
                    </Grid>

                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Описание:" 
                                       Foreground="White" 
                                       Margin="10,10,0,5"/>
                            <TextBox x:Name="BuildDescriptionTextBox" 
                                     Style="{StaticResource AdminTextBox}"
                                     Height="100" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>

                        <Border Grid.Column="1" 
                                Style="{StaticResource ImagePreviewBorder}">
                            <Image x:Name="BuildImage" 
                                   Width="250" 
                                   Height="250" 
                                   Stretch="Uniform"
                                   Margin="10"
                                   Source="default_image.png"/>
                        </Border>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10">
                    <TextBlock Text="Выбор компонентов" 
                               Foreground="White" 
                               FontSize="18" 
                               Margin="0,0,0,15"/>
                    
                    <!-- Процессор -->
                    <TextBlock Text="Процессор:" Foreground="White" Margin="0,5"/>
                    <ComboBox x:Name="CpuComboBox" 
                              Style="{StaticResource AdminComboBox}"
                              DisplayMemberPath="Name"/>

                    <!-- Материнская плата -->
                    <TextBlock Text="Материнская плата:" Foreground="White" Margin="0,5"/>
                    <ComboBox x:Name="MotherboardComboBox" 
                              Style="{StaticResource AdminComboBox}"
                              DisplayMemberPath="Name"/>

                    <!-- Видеокарта -->
                    <TextBlock Text="Видеокарта:" Foreground="White" Margin="0,5"/>
                    <ComboBox x:Name="GpuComboBox" 
                              Style="{StaticResource AdminComboBox}"
                              DisplayMemberPath="Name"/>

                    <!-- Оперативная память -->
                    <TextBlock Text="Оперативная память:" Foreground="White" Margin="0,5"/>
                    <ComboBox x:Name="RamComboBox" 
                              Style="{StaticResource AdminComboBox}"
                              DisplayMemberPath="Name"/>

                    <!-- Накопитель -->
                    <TextBlock Text="Накопитель:" Foreground="White" Margin="0,5"/>
                    <ComboBox x:Name="StorageComboBox" 
                              Style="{StaticResource AdminComboBox}"
                              DisplayMemberPath="Name"/>

                    <!-- Блок питания -->
                    <TextBlock Text="Блок питания:" Foreground="White" Margin="0,5"/>
                    <ComboBox x:Name="PsuComboBox" 
                              Style="{StaticResource AdminComboBox}"
                              DisplayMemberPath="Name"/>

                    <!-- Корпус -->
                    <TextBlock Text="Корпус:" Foreground="White" Margin="0,5"/>
                    <ComboBox x:Name="CaseComboBox" 
                              Style="{StaticResource AdminComboBox}"
                              DisplayMemberPath="Name"/>

                    <!-- Энергопотребление -->
                    <Border Background="#FF2D2D2D" CornerRadius="5" Margin="0,15,0,5" Padding="10">
                        <StackPanel>
                            <TextBlock x:Name="PowerUsageText" 
                                      Text="Энергопотребление: 0Вт" 
                                      Foreground="White" 
                                      Margin="0,0,0,5"/>
                            <ProgressBar x:Name="PowerProgressBar" 
                                       Height="20" 
                                       Maximum="1000" 
                                       Value="0">
                                <ProgressBar.Style>
                                    <Style TargetType="ProgressBar">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Value, RelativeSource={RelativeSource Self}}" Value="0">
                                                <Setter Property="Foreground" Value="#FF4CAF50"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Value, RelativeSource={RelativeSource Self}}" Value="800">
                                                <Setter Property="Foreground" Value="#FFFFEB3B"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Value, RelativeSource={RelativeSource Self}}" Value="900">
                                                <Setter Property="Foreground" Value="#FFF44336"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ProgressBar.Style>
                            </ProgressBar>
                        </StackPanel>
                    </Border>

                    <!-- Общая стоимость -->
                    <TextBlock Text="Общая стоимость:" Foreground="White" Margin="0,15,0,5"/>
                    <TextBox x:Name="TotalPriceTextBox" 
                            Style="{StaticResource AdminTextBox}"
                            IsReadOnly="True"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,20">
            <Button x:Name="CreateBuildButton" 
                    Content="Создать сборку" 
                    Style="{StaticResource AdminTileButton}" 
                    Click="CreateBuild_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Отмена" 
                    Style="{StaticResource AdminTileButton}" 
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
