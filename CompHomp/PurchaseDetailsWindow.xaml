<Window x:Class="CompHomp.PurchaseDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:CompHomp.Converters"
        Title="Детали покупки" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#FF1E1E1E">

    <Window.Resources>
        <converters:TotalPriceConverter x:Key="TotalPriceConverter"/>
        <converters:BuildStatusConverter x:Key="StatusConverter"/>
        
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFB0B0B0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1084D8"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF006CBD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Margin="20" Background="#FF2D2D2D" CornerRadius="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Детали покупки" Style="{StaticResource HeaderText}"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Номер заказа" Style="{StaticResource LabelText}"/>
                    <TextBlock Text="{Binding OrderId}" Style="{StaticResource ValueText}"/>

                    <TextBlock Text="Дата заказа" Style="{StaticResource LabelText}"/>
                    <TextBlock Text="{Binding OrderDate, StringFormat={}{0:dd.MM.yyyy HH:mm}}" Style="{StaticResource ValueText}"/>

                    <TextBlock Text="Статус" Style="{StaticResource LabelText}"/>
                    <TextBlock Text="{Binding Status, Converter={StaticResource StatusConverter}}" Style="{StaticResource ValueText}"/>

                    <TextBlock Text="Товары" Style="{StaticResource LabelText}"/>
                    <ItemsControl ItemsSource="{Binding OrderItems}" Margin="0,0,0,15">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FF363636" Margin="0,5" Padding="10" CornerRadius="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Build.Name}" Foreground="White" FontSize="14"/>
                                            <TextBlock Text="{Binding Build.Description}" 
                                                     Foreground="#FFB4B4B4" 
                                                     FontSize="12"
                                                     TextWrapping="Wrap"
                                                     MaxWidth="400"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" 
                                                  HorizontalAlignment="Right"
                                                  Margin="10,0,0,0">
                                            <TextBlock Text="{Binding Price, StringFormat={}{0:N0} ₽}" 
                                                     Foreground="White" 
                                                     FontSize="14"
                                                     HorizontalAlignment="Right"/>
                                            <TextBlock Text="{Binding Quantity, StringFormat={}Количество: {0}}" 
                                                     Foreground="#FFB4B4B4" 
                                                     FontSize="12"
                                                     HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="Итоговая сумма" Style="{StaticResource LabelText}"/>
                    <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N0} ₽}" 
                             Style="{StaticResource ValueText}" 
                             FontSize="18" 
                             FontWeight="Bold"/>
                </StackPanel>
            </ScrollViewer>

            <Button Grid.Row="2" Content="Закрыть" Style="{StaticResource ModernButton}"
                    HorizontalAlignment="Right" Width="120" Click="CloseButton_Click"/>
        </Grid>
    </Border>
</Window>
