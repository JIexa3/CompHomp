<Window x:Class="CompHomp.ReportGeneratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Генератор отчетов" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Window.Resources>
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#FF3E3E3E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="DarkDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#FF3E3E3E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="DarkCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3E3E3E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SubHeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Border Margin="20" CornerRadius="10" Background="#FF2D2D2D">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Генерация отчетов" 
                       Style="{StaticResource HeaderText}"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Основная панель настроек -->
            <StackPanel Grid.Row="1" Margin="0,10">
                <!-- Тип отчета -->
                <TextBlock Text="Выберите тип отчета:" 
                           Style="{StaticResource SubHeaderText}"/>
                <ComboBox x:Name="ReportTypeComboBox" 
                          Style="{StaticResource DarkComboBox}"
                          Margin="0,5,0,15">
                    <ComboBoxItem Content="Отчет по продажам"/>
                    <ComboBoxItem Content="Отчет по пользователям"/>
                    <ComboBoxItem Content="Отчет по сборкам"/>
                </ComboBox>

                <!-- Период -->
                <TextBlock Text="Выберите период:" 
                           Style="{StaticResource SubHeaderText}"/>
                <Grid Margin="0,5,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <DatePicker x:Name="StartDatePicker" 
                               Style="{StaticResource DarkDatePicker}"
                               Grid.Column="0"/>
                    <TextBlock Text=" - " 
                               Grid.Column="1"
                               Style="{StaticResource SubHeaderText}"
                               VerticalAlignment="Center"
                               Margin="10,0"/>
                    <DatePicker x:Name="EndDatePicker" 
                               Style="{StaticResource DarkDatePicker}"
                               Grid.Column="2"/>
                </Grid>

                <!-- Дополнительные параметры -->
                <GroupBox Header="Дополнительные параметры" 
                          Foreground="White"
                          BorderBrush="#FF3E3E3E"
                          Padding="10">
                    <StackPanel x:Name="ParametersPanel" Margin="5">
                        <CheckBox x:Name="IncludeDetailsCheckBox" 
                                 Content="Включить детальную информацию" 
                                 Style="{StaticResource DarkCheckBox}"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0">
                <Button x:Name="GenerateButton" 
                        Content="Сгенерировать отчет" 
                        Style="{StaticResource ActionButton}"
                        Background="#FF007ACC"
                        Click="GenerateButton_Click"/>
                <Button x:Name="CancelButton" 
                        Content="Отмена" 
                        Style="{StaticResource ActionButton}"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
