<Window x:Class="CompHomp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompHomp"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="400"
         WindowStartupLocation="CenterScreen"
         Background="#FF1A1A1A">
    <Window.Resources>
        <local:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter"/>
        
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3E3E3E"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,0"/>
            
        </Style>

        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3E3E3E"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1084D8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RegisterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF3E3E3E"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E3E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="CompHomp" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"  Margin="0,0,0,20"/>
            <TextBox Name="LoginTextbox"  GotFocus="LoginTextbox_GotFocus" LostFocus="LoginTextbox_LostFocus"  Style="{StaticResource TextBoxStyle}" Text="Логин"  />
            <Grid Margin="0,10">
                <PasswordBox Name="PasswordBox" Style="{StaticResource PasswordBoxStyle}" PasswordChanged="PasswordBox_PasswordChanged" />
                <TextBlock Name="PasswordHint" Text="Пароль" Foreground="Gray" Margin="15,0,0,0" VerticalAlignment="Center" 
                         IsHitTestVisible="False"/>
            </Grid>
            <TextBlock x:Name="ErrorMessage" Foreground="Red" TextWrapping="Wrap" Margin="0,10" TextAlignment="Center"/>
                <Button Name="LoginButton" Content="Войти" Click="OnLoginClick" Margin="0,10"  Style="{StaticResource ButtonStyle}"/>
            <Button Name="RegisterButton" Content="Регистрация" Click="RegisterButton_Click" Background="#FF404040"  Style="{StaticResource ButtonStyle}"/>
        </StackPanel>
    </Border>
</Window>
